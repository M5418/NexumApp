{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "nexum-backend",
  "version": "1.0.0",
  "description": "Nexum Express Backend API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "sql:migrate": "node ../scripts/migrate.js",
    "db:init": "node scripts/init-db.js",
    "db:setup": "npm run db:init && npm run prisma:generate",
    "migrate:string-ids": "node scripts/migrate-to-string-ids.js",
    "db:views": "node scripts/apply-views.js",
    "test": "node scripts/test-api.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.11",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^6.16.2"
  },
  "keywords": [
    "express",
    "api",
    "backend",
    "nexum"
  ],
  "author": "Nexum Team",
  "license": "MIT"
}