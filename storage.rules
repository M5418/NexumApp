rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function signedIn() { 
      return request.auth != null; 
    }
    
    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }
    
    // Validate file types
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    function isAudio() {
      return request.resource.contentType.matches('audio/.*');
    }
    
    function isDocument() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.*');
    }
    
    // Size limits
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024; // 100MB
    }
    
    function isValidDocumentSize() {
      return request.resource.size < 25 * 1024 * 1024; // 25MB
    }
    
    // LEGACY: Old uploads without user ID (backward compatibility for existing files)
    // These were uploaded before the path fix - allow read only
    match /uploads/{fileName} {
      allow read: if true;
      allow write: if false;  // Block new uploads to old path
      allow delete: if false;
    }
    
    // User uploads directory (NEW format with user ID)
    match /uploads/{uid}/{allPaths=**} {
      allow read: if true;                       // Public media
      allow write: if isOwner(uid) && (
        (isImage() && isValidImageSize()) ||
        (isVideo() && isValidVideoSize()) ||
        (isAudio() && isValidVideoSize()) ||
        (isDocument() && isValidDocumentSize())
      );
      allow delete: if isOwner(uid) || isAdmin();
    }
    
    // LEGACY: Old user profile/cover paths (backward compatibility)
    match /users/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if false;  // Block new uploads to old path
      allow delete: if false;
    }
    
    // Profile photos (special directory for faster CDN)
    match /profiles/{uid}/avatar/{fileName} {
      allow read: if true;
      allow write: if isOwner(uid) && isImage() && isValidImageSize();
      allow delete: if isOwner(uid) || isAdmin();
    }
    
    match /profiles/{uid}/cover/{fileName} {
      allow read: if true;
      allow write: if isOwner(uid) && isImage() && isValidImageSize();
      allow delete: if isOwner(uid) || isAdmin();
    }
    
    // Community assets
    match /communities/{communityId}/{allPaths=**} {
      allow read: if true;
      allow write: if signedIn();                // TODO: Check community admin
      allow delete: if isAdmin();
    }
    
    // System/admin uploads
    match /system/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Temporary uploads (auto-deleted after 24 hours via lifecycle rule)
    match /temp/{uid}/{allPaths=**} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && request.resource.size < 50 * 1024 * 1024; // 50MB
      allow delete: if isOwner(uid);
    }
  }
}
